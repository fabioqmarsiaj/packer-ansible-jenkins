{
  "builders": [{
    "type": "docker",
    "image": "ubuntu:16.04",
    "commit": "true"
  }],
 "provisioners": [
    {
      "type": "shell",
      "inline": ["echo 'hello!' > /root/foo"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "example/repo",
        "tag": "latest",
        "force": "true"
      },
      {
        "type": "docker-push",
        "login": "true",
        "login_username": "login",
        "login_password": "password",
        "login_email": "email"
      }
    ]
  ]
}
